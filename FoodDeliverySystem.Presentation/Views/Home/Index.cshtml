
@{
    ViewBag.Title = "Home Page";
    <header class="main-header">
        <div class="container-header">
            <div class="container-cus">
                <div class="header-content navbar row justify-content-between align-items-center">
                    <div class="logo-now col-auto">
                        <span>
                            <a href="#">
                                <img width="95" height="42" src="~/Assets/images/pollos_hermanos.svg" />
                            </a>
                        </span>
                    </div>
                    <div class="select-local col-auto">
                        <div class="dropdown">
                            <div class="dropdown-toggle dropdown-custom" role="button" id="local-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hà Nội
                            </div>
                            <div class="dropdown-menu">
                                <div class="dropdown-item">
                                    TP.HCM
                                </div>
                                <div class="dropdown-item">
                                    Hà Nội
                                </div>
                                <div class="dropdown-item">
                                    Đà Nẵng
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="main-nav col">
                        <a class="nav-item active" href="#">Đồ ăn</a>
                        <a class="nav-item" href="#">Đặt bàn</a>
                        <a class="nav-item" href="#">Thực phẩm</a>
                        <a class="nav-item" href="#">Bia</a>
                        <a class="nav-item" href="#">Hoa</a>
                        <a class="nav-item" href="#">Siêu thị</a>
                        <a class="nav-item" href="#">Thuốc</a>
                    </div>
                    <div class="header-icon-search col-auto">
                        <span data-toggle="modal" data-target="#modal-search">
                            <img class="icon-search-dark" width="25" height="25" src="~/Assets/images/search.svg" />
                        </span>
                    </div>
                    <div class="user-acc col-auto">

                        @Html.ActionLink("Đăng nhập", "Login", "Home", new { area = "" }, new { @class = "btn btn-primary" })

                        @if (Session["userName"] != null)
                        {
                            <h1>Heloo @Session["userName"]</h1>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade modal-search" id="modal-search" tabindex="-1" role="dialog" style="display: none" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    aaaa
                </div>
            </div>
        </div>
    </header>
    <div class="now-banner" style="position:fixed; top:70px">
        <div class="container-cus">
            <div class="now-search">
                <div>
                    <h1 class="title">Đặt Đồ ăn, giao hàng từ 20'...</h1>
                    <div class="local">có 25398 địa điểm ở Hà Nội từ 00:00 - 23:59</div>
                </div>
                <div class="form-search">
                    <div class="input-group">
                        <input type="text" id="txtSearchHome" placeholder="Tìm địa điểm, món ăn, địa chỉ..." value="">
                        <a href="/ha-noi/danh-sach-dia-diem-giao-tan-noi?q=">
                            <button type="button" class="btn btn-search">
                                <img class="icon-search-dark m-0" src="~/Assets/images/search-13-24.png" />
                            </button>
                        </a>
                    </div>
                </div>
                <div class="category-list-filter">
                    @{Html.RenderAction("ListCategory", "Restaurant_category");}
                </div>
                <div>
                    <div class="font18 mb-2 mt-3">
                        Say my name!.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contain-main-home clearfix">
        <div class="container-cus">
            <div class="main-right-home">
                <div class="now-list-restaurant deal-tab">
                    <div class="title-wrapper">
                        <h2 class="title">Ưu đãi</h2>
                        <a class="view-all-deal" href="#">Xem tất cả</a>
                    </div>
                    <div id="deal-list-restaurant" class="list-restaurant">
                        @{Html.RenderAction("ListDealRestaurant", "Restaurants");}
                    </div>
                    <div class="txt-center mt-2">
                        <button class="btn-none btn-load-more link" id="Btn-More-Deal">
                            <span>Xem thêm</span>
                        </button>
                    </div>
                </div>
                <div class="now-list-restaurant collection collection-tab">
                    <div class="title-wrapper">
                        <h2 class="title">Bộ sưu tập</h2>
                        <a class="view-all-deal" href="#">
                            Xem tất cả
                        </a>
                    </div>
                    <div class="list-restaurant">
                        <div>
                            @{Html.RenderAction("Index", "Discounts", new { area = "" });}
                        </div>
                    </div>
                </div>
                <div class="now-list-restaurant now-list-restaurant-row home-tab">
                    <div class="header-tab row align-items-center">
                        <div class="col">
                            <button class="item-tab active">
                                Gần tôi
                            </button>
                            <button class="item-tab">
                                Bán chạy
                            </button>
                            <button class="item-tab">
                                Đánh giá
                            </button>
                            <button class="item-tab">
                                Giao nhanh
                            </button>
                        </div>
                        <div class="col-auto">
                            <select name="districId">
                                <option value="-1">Chọn quận/ huyện</option>
                                <option value="1">Ba Đình</option>
                                <option value="2">Cầu Giấy</option>
                                <option value="3">Đống Đa</option>
                                <option value="4">Hà Đông</option>
                                <option value="5">Hai Bà Trưng</option>
                                <option value="6">Hoàn Kiếm</option>
                                <option value="7">Hoàng Mai</option>
                                <option value="8">Long Biên</option>
                                <option value="9">Tây Hồ</option>
                                <option value="10">Thanh Xuân</option>
                                <option value="11">Gia Lâm</option>
                                <option value="12">Hoài Đức</option>
                                <option value="13">Thanh Trì</option>
                                <option value="14">Thường Tín</option>
                                <option value="15">Bắc Từ Liêm</option>
                                <option value="16">Nam Từ Liêm</option>
                            </select>
                        </div>
                    </div>
                    <div id="near-list-restaurant" class="list-restaurant">
                        @{Html.RenderAction("ListNearRestaurant", "Restaurants");}
                    </div>
                    <div class="txt-center mt-2">
                        <button class="btn-none btn-load-more link" id="Btn-More-Location">
                            <span class="pr-1">Xem thêm</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

