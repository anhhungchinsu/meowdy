<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Assets/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Assets/css/site.css" />
</head>
<body onload="getLocation()">
    <div class="wrapper">
        <header class="main-header">
            <div class="container-header">
                <div class="container-cus">
                    <div class="header-content navbar row justify-content-between align-items-center">
                        <div class="logo-now col-auto">
                            <span>
                                <a href="#">
                                    <img width="95" height="42" src="~/Assets/images/pollos_hermanos.svg" />
                                </a>
                            </span>
                        </div>
                        <div class="select-local col-auto">
                            <select class="custom-select" id="selectedLocation">
                                <option value="Hanoi">Hà Nội</option>
                                <option value="Ho Chi Minh City">TP. HCM</option>
                                <option value="3">Đà Nẵng</option>
                            </select>
                        </div>
                        <div class="main-nav col">
                            <a class="nav-item active" href="#">Đồ ăn</a>
                            <a class="nav-item" href="#">Đặt bàn</a>
                            <a class="nav-item" href="#">Thực phẩm</a>
                            <a class="nav-item" href="#">Bia</a>
                            <a class="nav-item" href="#">Hoa</a>
                            <a class="nav-item" href="#">Siêu thị</a>
                            <a class="nav-item" href="#">Thuốc</a>
                        </div>
                        <div class="header-icon-search col-auto">
                            <span data-toggle="modal" data-target="#modal-search">
                                <img class="icon-search-dark" width="25" height="25" src="~/Assets/images/search.svg" />
                            </span>
                        </div>
                        <div class="user-acc col-auto">

                            @Html.ActionLink("Đăng nhập", "Login", "Home", new { area = "" }, new { @class = "btn btn-primary" })

                            @if (Session["userName"] != null)
                            {
                                <h1>Heloo @Session["userName"]</h1>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade modal-search" id="modal-search" tabindex="-1" role="dialog" style="display: none" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        aaaa
                    </div>
                </div>
            </div>
        </header>
            @RenderBody()
        <footer class="clearfix">
            <div class="container-cus">
                made by Anhhungchinsu
            </div>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>
    <link href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Assets/js/site.js"></script>
</body>
</html>
